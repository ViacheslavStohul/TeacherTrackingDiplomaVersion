@using Newtonsoft.Json;
@using DataAccess.Entities;
<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="UTF-8">
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <meta http-equiv="Content-Security-Policy" content="upgrade-insecure-requests" />
    <title>Сторінка користувача</title>
    <!--===============================================================================================-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <!--===============================================================================================-->
    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" crossorigin="anonymous"></script>
    <script type="text/javascript" src="http://cdn.datatables.net/1.10.2/js/jquery.dataTables.min.js" crossorigin="anonymous"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/v/bs5/dt-1.12.1/datatables.min.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" type="text/css" href="~/css/mainPage.css">
    <!--===============================================================================================-->
</head>
<body>
    <div class="limiter">
        <div class="container-login100" style="background-image: url('../images/img-02.jpg');"></div>
    </div>
    <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #000000;">
        <form class="form-inline">
            <button class="btn menu-btn" type="button">
                <img src="~/images/logo_white.svg" id="logoimg" width="50" height="50">
                <span>Menu</span>
            </button>
        </form>
    </nav>
    <div class="wrapper">
        <div class="menu">
            <nav class="menu-list bg-dark">
                <div id="mainbtn"><a href="#">Головна</a></div>
                @{
                    var a = Context.Request.Cookies["user"];
                    try
                    {
                        UserInfo user = JsonConvert.DeserializeObject<UserInfo>(a);

                        if (user.AccessLevel.Chair || user.AccessLevel.Comission || user.AccessLevel.Departament || user.AccessLevel.User)
                        {
                            <div id="userbtn"><a href="#">Користувачі</a></div>
                        }

                        if (user.AccessLevel.Name == "Адміністратор")
                        {
                            <div id="chairbtn"><a href="#">Кафедри</a></div>
                            <div id="comissionbtn"><a href="#">Комісії</a></div>
                            <div id="departbtn"><a href="#">Відділення</a></div>
                        }
                    }
                    catch
                    {

                    }
                }
                <div id="exitbtn"><a href="#">Вийти з системи</a></div>
            </nav>
        </div>
    </div>
    @RenderBody()

    <div class="toast-container position-fixed" style="bottom:30px;right:60px;">
    </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="staticBackdropLabel">Увага</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Чи дійсно хочете вийти з системи?
                </div>
                <div class="modal-footer">
                    <button type="button" id="totaySuperPuperExitBtn" class="btn btn-primary">Так</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Ні</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="loadModal" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    </div>
    <!--===============================================================================================-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="~/js/./Layout.js" type="module"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
